<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="panel">
    <div class="row">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="row">
      <% if user_signed_in? %>
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password%>
      <% end %>
    </div>

    <div class="row collapse">
      <div class="large-6 columns">
        <%= f.label :password %>
        <% if user_signed_in? %><i>(leave blank if no change)</i><% end %>
        <%= f.password_field :password %></p>
      </div>
      <div class="large-6 columns">
        <%= f.label :password_confirmation %>
        <% if user_signed_in? %><i>(leave blank if no change)</i><% end %>
        <%= f.password_field :password_confirmation %>
      </div>
    </div>

    <div class="row">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="row collapse">
      <div class="large-6 columns">
        <%= f.label :gender %>
        <%= f.select :gender, User::GENDER %>
      </div>
      <div class="large-6 columns">
        <%= f.label :sexual_orientation %>
        <%= f.select :sexual_orientation, User::SEXUAL_ORIENTATION %>
      </div>
    </div>

    <div class="row collapse">
    <%= f.label :dob, 'Date of Birth' %>
      <div class="row">
        <%= f.date_select :dob, {order: [:month, :day, :year], start_year: 1900, end_year: Date.today.year}, {class: 'large-4 columns'} %>
      </div>
    </div>

    <div class="row collapse">
      <div class="large-6 columns">
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>
      <div class="large-6 columns">
        <%= f.label :state %>
        <%= f.select :state, User::STATES %>
      </div>
    </div>

    <div class="row">
      <%= f.label :image_url %>
      <% if user_signed_in? %>
        <%= image_tag(current_user.image_url, size: '80x80') %>
      <% end %>
      <%= f.url_field :image_url %>
    </div>

    <div class="row">
      <%= f.label :quote %>
      <%= f.text_field :quote %>
    </div>

    <div class="row">
      <%= f.submit class: 'expand button radius' %>
    </div>
  </div>
<% end %>
