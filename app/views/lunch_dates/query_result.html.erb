<div class="container">
  <% @locations.each do |spot| %>
    <div class="row">
      <div class="large-4 columns">
        <label>Name</label>
        <%= link_to spot.name, new_lunch_date_path(location_name: spot.name, latitude: spot.lat, longitude: spot.lng) %>
      </div>
      <div class="large-4 columns">
        <% if !spot.icon.nil? %>
          <%= image_tag(spot.icon, size: '25x25', id: 'location_icons') %>
        <% end %>
      </div>
      <div class="large-4 columns">
        <label>Rating</label>
        <%= spot.rating %>
      </div>
    <hr>
    </div>
  <% end %>
</div>
